@model IEnumerable<LibraryApp.Models.Libary>

@{
    ViewData["Title"] = "Libarys";
}

<h1>CreatLibary</h1>

<p>
    <a asp-action="CreatLibary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameLibary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameLibary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.ActionLink("הוספת מדף", "CreateShelves", new { libId = item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
